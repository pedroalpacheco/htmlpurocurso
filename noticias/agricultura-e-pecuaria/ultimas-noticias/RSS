      <dc:subject>Plano Safra 2019/2020</dc:subject>
    
      <dc:subject>Ministério da Agricultura</dc:subject>
    
    <dc:date>2020-07-09T21:00:45Z</dc:date>
    <dc:type>collective.nitf.content</dc:type>
