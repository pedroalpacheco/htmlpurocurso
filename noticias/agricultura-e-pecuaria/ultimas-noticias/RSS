      <dc:subject>Plano Safra</dc:subject>
    
      <dc:subject>Plano Safra 20/21</dc:subject>
    
      <dc:subject>Tereza Cristina </dc:subject>
    
      <dc:subject>Mapa</dc:subject>
    
      <dc:subject>#agricultura</dc:subject>
    
