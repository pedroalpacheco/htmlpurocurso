        <rdf:li rdf:resource="https://www.gov.br/pt-br/noticias/agricultura-e-pecuaria/2020/01/entenda-como-funciona-o-programa-de-aquisicao-de-alimentos" />
      
        <rdf:li rdf:resource="https://www.gov.br/pt-br/noticias/agricultura-e-pecuaria/2020/01/mais-de-84-milhoes-de-animais-foram-vacinados-no-pais-no-segundo-semestre-de-2019" />
      
        <rdf:li rdf:resource="https://www.gov.br/pt-br/noticias/agricultura-e-pecuaria/2020/01/brasil-vai-exportar-gergelim-para-india" />
      
